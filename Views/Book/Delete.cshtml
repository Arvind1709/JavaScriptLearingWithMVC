@model BookModel

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-danger">Delete Book</h2>
        <hr />
        <p class="text-center">Are you sure you want to delete this book?</p>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Title:</dt>
                    <dd class="col-sm-8">@Model.Title</dd>

                    <dt class="col-sm-4">Author:</dt>
                    <dd class="col-sm-8">@Model.Author</dd>

                    <dt class="col-sm-4">Genre:</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">$@Model.Price</dd>
                </dl>
            </div>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-danger px-4">Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

